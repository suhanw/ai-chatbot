{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@cache": ["cache/src/index.ts"],
      "@data": ["data/src/index.ts"],
      "@integrations": ["integrations/src/index.ts"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
